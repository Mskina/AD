<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.password">abc123.</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;encrypt=true;trustServerCertificate=true;</property>
		<property name="hibernate.connection.username">user</property>
		<property name="hibernate.default_catalog">empleados_herencia</property>
		<property name="hibernate.default_schema">dbo</property>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="hibernate.hbm2ddl.auto">drop-and-create</property>
		<property name="show_sql">true</property>
		<mapping class="modelo.Empleado"/>
		<mapping class="modelo.EmpleadoFijo"/>
		<mapping class="modelo.EmpleadoTemporal"/>
		<mapping class="modelo.Empresa"/>
	</session-factory>
</hibernate-configuration>
